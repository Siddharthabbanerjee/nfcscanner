<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nationalsurvey.siddharthab.presidentialelection.MainActivity$PlaceholderFragment">


    <TextView
        android:id="@+id/survey_question"
        android:layout_marginTop="@dimen/survey_question_padding_top"
        android:padding="@dimen/l"
        android:text="@string/sample_question"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_xxl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/l">

        <RadioButton
            android:id="@+id/first_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_first_answer"/>

        <RadioButton
            android:id="@+id/second_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sample_second_answer"/>
    </RadioGroup>

    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit_button"
        android:layout_marginTop="@dimen/submit_button_margin_top"/>

</LinearLayout>
